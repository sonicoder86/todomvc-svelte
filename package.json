{
  "name": "todomvc-svelte",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blacksonic/todomvc-svelte.git"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest src",
    "test:e2e": "start-server-and-test start http://localhost:9500 cypress",
    "cypress": "cypress run"
  },
  "dependencies": {
    "svelte": "^3.0.0",
    "todomvc-app-css": "^2.3.0",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^25.2.6",
    "cypress": "^4.3.0",
    "jest": "^25.2.7",
    "jest-extended": "^0.11.5",
    "rollup": "^2.3.2",
    "rollup-plugin-livereload": "^1.1.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svelte": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "start-server-and-test": "^1.10.11",
    "svelte-jester": "^1.0.5"
  },
  "engines": {
    "node": "12"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.js"
    ]
  }
}
